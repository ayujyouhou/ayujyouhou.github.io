---
const links = [
  { href: "/", label: "Home" },
  { href: "/about", label: "About" },
  { href: "/gallery", label: "Gallery" }, // あとで作る用
  { href: "/hobbies", label: "Hobbies" }, // あとで作る用（音楽/アニメ/ゲーム）
  // { href: "/blog", label: "Blog" },    // 使うなら有効化
];
---
<nav class="fixed top-4 left-4 z-50">
  <details class="group">
    <summary
      class="list-none inline-flex items-center justify-center size-10 rounded-xl border 
             border-white/20 bg-white/10 backdrop-blur-md  /* ← かなり薄い */
             text-black/70 shadow-sm
             hover:bg-white/20 hover:border-white/30 hover:shadow
             transition"
      aria-label="Open menu"
    >
      <!-- ハンバーガーアイコン -->
      <svg viewBox="0 0 24 24" class="size-6">
        <path d="M4 7h16M4 12h16M4 17h16"
              stroke="currentColor" stroke-width="2" stroke-linecap="round"
              class="opacity-80 group-hover:opacity-100"/>
      </svg>
    </summary>

    <!-- ドロップダウンパネル（こちらも薄め） -->
    <div
      class="mt-2 w-44 rounded-2xl border border-white/20
             bg-white/10 backdrop-blur-md
             shadow-lg p-2"
    >
      <ul class="space-y-1">
        <li><a href="/" class="block rounded-lg px-3 py-2 text-sm hover:bg-white/20">Home</a></li>
        <li><a href="/about" class="block rounded-lg px-3 py-2 text-sm hover:bg-white/20">About</a></li>
        <li><a href="/gallery" class="block rounded-lg px-3 py-2 text-sm hover:bg-white/20">Gallery</a></li>
        <li><a href="/hobbies" class="block rounded-lg px-3 py-2 text-sm hover:bg-white/20">Hobbies</a></li>
      </ul>
    </div>
  </details>
</nav>

