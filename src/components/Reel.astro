---
type Item = { date: string; text: string };
const { items = [] as Item[] } = Astro.props;
---
<section class="mt-8">
  <h2 class="text-3xl font-semibold">最近の更新</h2>
  <ul class="mt-3 space-y-2">
    {items.length === 0 ? (
      <li class="text-sm text-gray-500">まだ投稿はありません。</li>
    ) : (
      items.map((i) => (
        <li class="flex gap-3">
          <span class="min-w-[80px] shrink-0 text-sm text-gray-700">{i.date}</span>
      <p class="text-base">{i.text}</p>

        </li>
      ))
    )}
  </ul>
</section>

