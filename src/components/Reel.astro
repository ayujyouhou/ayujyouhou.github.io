---
type Item = { date: string; text: string };
const { items = [] as Item[] } = Astro.props;
---
<section class="mt-8">
  <h2 class="text-xl font-semibold">最近の更新</h2>
  <ul class="mt-3 space-y-2">
    {items.length === 0 ? (
      <li class="text-sm text-gray-500">まだ投稿はありません。</li>
    ) : (
      items.map((i) => (
        <li class="flex gap-3">
          <span class="w-20 shrink-0 text-xs text-gray-500">{i.date}</span>
          <p class="text-sm">{i.text}</p>
        </li>
      ))
    )}
  </ul>
</section>

